<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="388dp"

        android:layout_height="0dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="13dp"
                app:cardElevation="13dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="#9EDDFB"
                        android:gravity="center_horizontal"
                        android:text="QUESTION YOU ASKED"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/resultedt"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:autoLink="all"
                        android:background="#D5F9F6"
                        android:hint="" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="60dp"
                        android:background="#AEE1FA"
                        android:gravity="center_horizontal"
                        android:text="ImagePreview"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/ImageViewpre"
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:background="#E8FDFB"
                        android:hint="image preview"
                        android:maxHeight="500dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginBottom="37dp"
        android:background="#07010F"
        android:text=" Cilck and Get Solution Video"
        android:textColor="#A7CFF2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>